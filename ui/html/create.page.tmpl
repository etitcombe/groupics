{{template "base" .}}

{{define "title"}}Create{{end}}

{{define "main"}}
<form action="/create" method="POST">
    <div>
        <label>Title:</label>
        {{with .FormErrors.title}}<label class="error">{{.}}</label>{{end}}
        <input type="text" name="title" value="{{.FormData.Get "title"}}">
    </div>
    <div>
        <label>Content:</label>
        {{with .FormErrors.content}}<label class="error">{{.}}</label>{{end}}
        <textarea name="content">{{.FormData.Get "content"}}</textarea>
    </div>
    <div>
        <label>Delete in:</label>
        {{with .FormErrors.expires}}<label class="error">{{.}}</label>{{end}}
        {{$exp := or (.FormData.Get "expires") "365"}}
        <input type="radio" name="expires" value="365" id="expires-year" {{if eq $exp "365"}}checked{{end}}><label for="expires-year">One Year</label>
        <input type="radio" name="expires" value="7" id="expires-week" {{if eq $exp "7"}}checked{{end}}><label for="expires-week">One Week</label>
        <input type="radio" name="expires" value="1" id="expires-day" {{if eq $exp "1"}}checked{{end}}><label for="expires-day">One Day</label>
    </div>
    <div>
        <input type="submit" value="Publish">
    </div>
</form>
{{end}}